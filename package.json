{
  "name": "api-challenges-playwright",
  "version": "1.0.0",
  "description": "API tests for API Challenges using Playwright",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:report": "playwright test --reporter=html",
    "test:tag": "playwright test --grep",
    "report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.0",
    "dotenv": "^16.4.5"
  }
}
